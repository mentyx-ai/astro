<style>
  /* FOOTER SPECIFIC STYLES */
  .footer {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(10, 16, 28, 0.95) 100%);
    border-top: 1px solid rgba(59, 130, 246, 0.1);
    padding: 80px 0 32px;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr 1.2fr;
    gap: 60px;
    margin-bottom: 60px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    font-size: 1.375rem;
    font-weight: 700;
    color: white;
  }

  .gradient-text {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-tagline {
    color: #94a3b8;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .footer-social {
    display: flex;
    gap: 12px;
  }

  .footer-social a {
    width: 40px;
    height: 40px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #06b6d4;
    transition: all 0.3s ease;
  }

  .footer-social a:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.4);
    transform: translateY(-2px);
    color: #22d3ee;
  }

  .footer-col h4 {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: white;
    letter-spacing: 0.025em;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-col li {
    margin-bottom: 12px;
  }

  .footer-col a {
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9375rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .footer-col a:hover {
    color: #06b6d4;
    padding-left: 4px;
  }

  .footer-contact li {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #94a3b8;
    font-size: 0.9375rem;
    margin-bottom: 16px;
  }

  .footer-contact svg {
    flex-shrink: 0;
    color: #06b6d4;
  }

  .footer-contact a {
    padding-left: 0;
  }

  .footer-bottom {
    border-top: 1px solid rgba(59, 130, 246, 0.1);
    padding-top: 32px;
    text-align: center;
  }

  .footer-bottom p {
    color: #64748b;
    font-size: 0.875rem;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1fr;
      gap: 40px;
    }

    .footer-col:last-child {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 60px 0 32px;
    }
    
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .footer-logo {
      font-size: 1.25rem;
    }

    .footer-col {
      text-align: left;
    }

    .footer-social {
      justify-content: flex-start;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 48px 0 24px;
    }

    .container {
      padding: 0 20px;
    }

    .footer-grid {
      gap: 32px;
    }
  }
</style>