<style>
  /* FAQ SECTION SPECIFIC STYLES */
  .faq-section {
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
    padding: 120px 0;
    position: relative;
  }

  .faq-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 20%, rgba(59, 130, 246, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(6, 182, 212, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .badge-wrapper {
    text-align: center;
    margin-bottom: 32px;
  }

  .badge-center {
    display: inline-block;
    padding: 12px 24px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 50px;
    color: #06b6d4;
