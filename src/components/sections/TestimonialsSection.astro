</style>

<script>
  // Testimonial Carousel with Continuous Slow Auto-scroll and Mouse/Touch Drag
  const carousel = document.getElementById('testimonialCarousel');
  const track = document.getElementById('carouselTrack');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const dotsContainer = document.getElementById('carouselDots');

  if (carousel && track && prevBtn && nextBtn && dotsContainer) {
    const cards = track.querySelectorAll('.testimonial-card');
    const totalUniqueCards = 8; // actual distinct testimonials
    const prefersReducedMotion = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    let cardWidth = 0;
    let totalWidth = 0;
    let scrollPosition = 0;
    let isAutoScrolling = !prefersReducedMotion;
    let isDragging = false;
    let startPos = 0;
    let startScrollPosition = 0;
    const scrollSpeed = 0.3; // pixels per frame (small = slow)

    // Measure card width dynamically (desktop + mobile)
    function measureCardWidth() {
      if (!cards.length) return;
      const firstCard = cards[0];
      const style = window.getComputedStyle(track);
      const gap = parseFloat(style.columnGap || style.gap || '32');
      const rect = firstCard.getBoundingClientRect();
      cardWidth = rect.width + gap;
      totalWidth = totalUniqueCards * cardWidth;
    }

    measureCardWidth();
    window.addEventListener('resize', () => {
      measureCardWidth();
      // keep scrollPosition in bounds
      if (scrollPosition > totalWidth) {
        scrollPosition = scrollPosition % totalWidth;
      }
      track.style.transform = `translateX(-${scrollPosition}px)`;
    });

    // Create dots
    for (let i = 0; i < totalUniqueCards; i++) {
      const dot = document.createElement('button');
      dot.classList.add('dot');
      dot.type = 'button';
      dot.setAttribute('aria-label', `Go to testimonial ${i + 1}`);
      if (i === 0) dot.classList.add('active');
      dot.addEventListener('click', () => goToSlide(i));
      dotsContainer.appendChild(dot);
    }

    const dots = dotsContainer.querySelectorAll('.dot');

    // Update active dot based on scroll position
    function updateActiveDot() {
      if (!cardWidth || !totalWidth) return;
      const normalized = ((scrollPosition % totalWidth) + totalWidth) % totalWidth;
      const currentCard = Math.round(normalized / cardWidth) % totalUniqueCards;

      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentCard);
      });
    }

    // Continuous auto-scroll animation
    function autoScroll() {
      if (isAutoScrolling && !isDragging && !prefersReducedMotion && cardWidth && totalWidth) {
        scrollPosition += scrollSpeed;

        if (scrollPosition >= totalWidth) {
          scrollPosition -= totalWidth;
        }

        track.style.transform = `translateX(-${scrollPosition}px)`;
        updateActiveDot();
      }
      requestAnimationFrame(autoScroll);
    }

    // Navigate to specific slide
    function goToSlide(index) {
      if (!cardWidth) return;
      scrollPosition = index * cardWidth;
      track.style.transition = 'transform 0.5s ease';
      track.style.transform = `translateX(-${scrollPosition}px)`;
      updateActiveDot();

      setTimeout(() => {
        track.style.transition = 'none';
      }, 500);

      pauseAutoScroll();
      setTimeout(() => resumeAutoScroll(), 3000);
    }

    // Manual navigation
    function nextSlide() {
      if (!cardWidth) return;
      const normalized = ((scrollPosition % totalWidth) + totalWidth) % totalWidth;
      const currentCard = Math.round(normalized / cardWidth);
      const nextCard = (currentCard + 1) % totalUniqueCards;
      goToSlide(nextCard);
    }

    function prevSlide() {
      if (!cardWidth) return;
      const normalized = ((scrollPosition % totalWidth) + totalWidth) % totalWidth;
      const currentCard = Math.round(normalized / cardWidth);
      const prevCard = (currentCard - 1 + totalUniqueCards) % totalUniqueCards;
      goToSlide(prevCard);
    }

    // Pause/resume auto-scroll
    function pauseAutoScroll() {
      isAutoScrolling = false;
    }

    function resumeAutoScroll() {
      if (!prefersReducedMotion) {
        isAutoScrolling = true;
      }
    }

    // Mouse / touch helpers
    function getPositionX(event) {
      return event.type.includes('mouse') ? event.pageX : event.touches[0].clientX;
    }

    function touchStart(event) {
      isDragging = true;
      startPos = getPositionX(event);
      startScrollPosition = scrollPosition;
      carousel.style.cursor = 'grabbing';
      pauseAutoScroll();
      track.style.transition = 'none';
    }

    function touchMove(event) {
      if (!isDragging) return;
      event.preventDefault();
      const currentPosition = getPositionX(event);
      const diff = startPos - currentPosition;
      scrollPosition = startScrollPosition + diff;

      // keep scrollPosition looping
      if (scrollPosition < 0) {
        scrollPosition = totalWidth + scrollPosition;
      }
      if (scrollPosition >= totalWidth) {
        scrollPosition = scrollPosition % totalWidth;
      }

      track.style.transform = `translateX(-${scrollPosition}px)`;
      updateActiveDot();
    }

    function touchEnd() {
      if (!isDragging) return;
      isDragging = false;
      carousel.style.cursor = 'grab';

      if (!cardWidth) return;
      const normalized = ((scrollPosition % totalWidth) + totalWidth) % totalWidth;
      const nearestCard = Math.round(normalized / cardWidth);
      scrollPosition = nearestCard * cardWidth;

      track.style.transition = 'transform 0.3s ease';
      track.style.transform = `translateX(-${scrollPosition}px)`;

      setTimeout(() => {
        track.style.transition = 'none';
        resumeAutoScroll();
      }, 300);
    }

    // Event listeners
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);

    carousel.addEventListener('mousedown', touchStart);
    carousel.addEventListener('mousemove', touchMove);
    carousel.addEventListener('mouseup', touchEnd);
    carousel.addEventListener('mouseleave', touchEnd);

    carousel.addEventListener('touchstart', touchStart, { passive: false });
    carousel.addEventListener('touchmove', touchMove, { passive: false });
    carousel.addEventListener('touchend', touchEnd);

    carousel.addEventListener('mouseenter', pauseAutoScroll);
    carousel.addEventListener('mouseleave', resumeAutoScroll);

    // Initial state
    track.style.transition = 'none';
    updateActiveDot();
    requestAnimationFrame(autoScroll);
  }
</script>
