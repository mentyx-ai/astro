<style>
  /* TESTIMONIALS SECTION SPECIFIC STYLES */
  .testimonials-section {
    background: rgba(30, 41, 59, 0.3);
    padding: 100px 0;
    overflow: hidden;
  }

  .badge-wrapper {
    text-align: center;
