    document.addEventListener('DOMContentLoaded', () => {
      const tabs = Array.from(
        document.querySelectorAll('[data-dashboard-view-trigger]')
      );
      const panels = Array.from(
        document.querySelectorAll('[data-dashboard-view]')
      );

      function setView(name) {
        panels.forEach((panel) => {
          panel.classList.toggle('is-visible', panel.dataset.dashboardView === name);
        });
        tabs.forEach((tab) => {
          tab.classList.toggle('is-active', tab.dataset.view === name);
        });
      }

      tabs.forEach((tab) => {
        tab.addEventListener('click', () => {
          const view = tab.dataset.view || 'executive';
          setView(view);
        });
      });

      setView('executive');
    });
