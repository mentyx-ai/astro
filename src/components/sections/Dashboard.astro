        /* CSS Reset & Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: #e2e8f0;
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }

        /* Dashboard Container */
        .dashboard-preview {
            max-width: 1400px;
            margin: 0 auto;
        }

        .dashboard-container {
            background: rgba(30, 41, 59, 0.7);
            border: 1px solid #334155;
            border-radius: 24px;
            padding: 30px;
            position: relative;
            backdrop-filter: blur(20px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .dashboard-window {
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
        }

        /* Enhanced Header */
        .dashboard-header {
            background: #1e293b;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 16px;
            border-bottom: 1px solid #334155;
        }

        .window-controls {
            display: flex;
            gap: 8px;
        }

        .control {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .control.red { background: #ff5f57; }
        .control.yellow { background: #ffbd2e; }
        .control.green { background: #28ca42; }

        .header-title {
            color: #94a3b8;
            font-size: 0.875rem;
            font-weight: 600;
            flex: 1;
        }

        .header-status {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #06b6d4;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .status-indicator {
            width: 8px;
            height: 8px;
            background: #06b6d4;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        /* Dashboard Grid Layout */
        .dashboard-grid {
            display: grid;
            grid-template-columns: 240px 1fr;
            min-height: 600px;
        }

        /* Enhanced Sidebar */
        .sidebar {
            background: #1e293b;
            border-right: 1px solid #334155;
            padding: 24px 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar-section {
            margin-bottom: 32px;
        }

        .sidebar-section:last-child {
            margin-bottom: 0;
        }

        .sidebar-label {
            padding: 0 20px 12px 20px;
            color: #64748b;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .sidebar-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            color: #94a3b8;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
        }

        .sidebar-item:hover {
            background: rgba(59, 130, 246, 0.1);
            color: #06b6d4;
        }

        .sidebar-item.active {
            background: rgba(59, 130, 246, 0.15);
            color: #06b6d4;
            border-right: 3px solid #06b6d4;
        }

        .sidebar-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 20px;
            height: 20px;
        }

        .sidebar-icon svg {
            width: 16px;
            height: 16px;
        }

        .sidebar-text {
            font-size: 0.875rem;
            font-weight: 500;
            flex: 1;
        }

        .sidebar-badge {
            background: #3b82f6;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        /* Main Content Area */
        .main-content {
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 24px;
            background: #0f172a;
            overflow-y: auto;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
        }

        .stat-card {
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 12px;
            padding: 20px;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%);
        }

        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .stat-title {
            color: #94a3b8;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .stat-trend {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 8px;
        }

        .stat-trend.up {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
        }

        .stat-trend.down {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 900;
            background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1;
            margin-bottom: 8px;
        }

        .stat-unit {
            color: #64748b;
            font-size: 0.875rem;
            font-weight: 500;
            margin-left: 4px;
        }

        .stat-chart {
            display: flex;
            align-items: flex-end;
            gap: 4px;
            height: 40px;
            margin-top: 12px;
        }

        .chart-bar {
            flex: 1;
            background: linear-gradient(to top, #3b82f6 0%, #06b6d4 100%);
            border-radius: 2px 2px 0 0;
            transition: height 1.5s ease-in-out;
        }

        .stat-gauge {
            margin-top: 12px;
        }

        .gauge-track {
            width: 100%;
            height: 6px;
            background: #334155;
            border-radius: 3px;
            overflow: hidden;
        }

        .gauge-fill {
            height: 100%;
            background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%);
            border-radius: 3px;
            transition: width 2s ease-in-out;
        }

        .stat-progress {
            margin-top: 8px;
        }

        .progress-label {
            color: #64748b;
            font-size: 0.75rem;
        }

        .stat-sparkline {
            margin-top: 12px;
        }

        .sparkline {
            width: 100%;
            height: 30px;
        }

        .sparkline-path {
            fill: none;
            stroke: #06b6d4;
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
        }

        /* Activity Section */
        .activity-section {
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 12px;
            padding: 20px;
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 16px;
        }

        .section-header h3 {
            color: #cbd5e1;
            font-size: 1rem;
            font-weight: 600;
            margin: 0;
        }

        .live-pulse {
            width: 8px;
            height: 8px;
            background: #06b6d4;
            border-radius: 50%;
            animation: pulse 1.5s infinite;
        }

        .activity-feed {
            display: flex;
            flex-direction: column;
            gap: 12px;
            max-height: 300px;
            overflow-y: auto;
        }

        .activity-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: #334155;
            border-radius: 8px;
            border: 1px solid transparent;
            transition: all 0.3s ease;
        }

        .activity-item:hover {
            background: #3c4a61;
        }

        .activity-item.new {
            border-color: #06b6d4;
            background: rgba(6, 182, 212, 0.1);
            animation: slideIn 0.5s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .activity-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #06b6d4;
        }

        .activity-content {
            flex: 1;
        }

        .activity-main {
            color: #cbd5e1;
            font-size: 0.875rem;
            line-height: 1.4;
            margin-bottom: 4px;
        }

        .activity-main strong {
            color: white;
        }

        .activity-time {
            color: #64748b;
            font-size: 0.75rem;
        }

        /* Activity Badges - CONSISTENT STYLING */
        .activity-badge {
            padding: 4px 8px;
            border-radius: 8px;
            font-size: 0.75rem;
            font-weight: 600;
            white-space: nowrap;
            border: none;
        }

        .activity-badge.ai-processing {
            background: rgba(59, 130, 246, 0.2);
            color: #3b82f6;
            border: 1px solid rgba(59, 130, 246, 0.3);
        }

        .activity-badge.approved {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
            border: 1px solid rgba(34, 197, 94, 0.3);
        }

        .activity-badge.reviewing {
            background: rgba(245, 158, 11, 0.2);
            color: #f59e0b;
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

