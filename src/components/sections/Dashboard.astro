            background: rgba(245, 158, 11, 0.2);
            color: #f59e0b;
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        .activity-badge.high-risk {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        /* AI Visualization */
        .ai-visualization {
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 12px;
            padding: 20px;
        }

        .viz-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .viz-header h3 {
            color: #cbd5e1;
            font-size: 1rem;
            font-weight: 600;
            margin: 0;
        }

        .viz-stats {
            display: flex;
            gap: 16px;
        }

        .viz-stat {
            text-align: center;
        }

        .viz-value {
            display: block;
            color: #06b6d4;
            font-size: 1.125rem;
            font-weight: 700;
        }

        .viz-label {
            display: block;
            color: #64748b;
            font-size: 0.75rem;
        }

        /* Pipeline */
        .pipeline {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .pipeline-stage {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            flex: 1;
            opacity: 0.5;
            transition: all 0.5s ease;
        }

        .pipeline-stage.active {
            opacity: 1;
        }

        .pipeline-stage.active .stage-icon {
            transform: scale(1.1);
            filter: brightness(1.2);
        }

        .stage-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid rgba(59, 130, 246, 0.2);
            border-radius: 10px;
            color: #06b6d4;
            transition: all 0.5s ease;
        }

        .stage-icon svg {
            width: 20px;
            height: 20px;
        }

        .stage-label {
            color: #94a3b8;
            font-size: 0.75rem;
            font-weight: 500;
            text-align: center;
        }

        .stage-progress {
            width: 100%;
            height: 3px;
            background: #334155;
            border-radius: 2px;
            position: relative;
            overflow: hidden;
        }

        .pipeline-stage.active .stage-progress::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: linear-gradient(90deg, #3b82f6 0%, #06b6d4 100%);
            animation: progress 2s ease-in-out infinite;
        }

        @keyframes progress {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        /* Data Stream */
        .data-stream {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .stream-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 12px;
            background: #334155;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .stream-item.new {
            background: rgba(6, 182, 212, 0.1);
            border: 1px solid rgba(6, 182, 212, 0.3);
        }

        .stream-dot {
            width: 6px;
            height: 6px;
            background: #06b6d4;
            border-radius: 50%;
            animation: pulse 1.5s infinite;
        }

        .stream-text {
            color: #94a3b8;
            font-size: 0.875rem;
        }

        /* Preview Label */
        .preview-label {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-top: 20px;
            padding: 8px 16px;
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid rgba(59, 130, 246, 0.3);
            border-radius: 20px;
            color: #06b6d4;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .pulse-dot {
            width: 6px;
            height: 6px;
            background: #06b6d4;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 1024px) {
            .dashboard-grid {
                grid-template-columns: 200px 1fr;
            }
        }

        @media (max-width: 768px) {
            .dashboard-container {
                padding: 20px;
            }
            
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
            
            .sidebar {
                display: none;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .main-content {
                padding: 16px;
            }
            
            .pipeline {
                flex-direction: column;
                gap: 16px;
            }

            .pipeline-stage {
                flex-direction: row;
                justify-content: flex-start;
            }

            .stage-progress {
                width: 3px;
                height: 40px;
            }

            .pipeline-stage.active .stage-progress::after {
                animation: progressVertical 2s ease-in-out infinite;
            }

            @keyframes progressVertical {
                0% { transform: translateY(-100%); }
                100% { transform: translateY(100%); }
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .dashboard-preview {
                margin-top: 20px;
            }
            
            .dashboard-container {
                padding: 16px;
            }
            
            .viz-header {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }
            
            .viz-stats {
                width: 100%;
                justify-content: space-around;
            }
        }

        /* Custom Scrollbar */
        .activity-feed::-webkit-scrollbar {
            width: 6px;
        }

        .activity-feed::-webkit-scrollbar-track {
            background: #1e293b;
            border-radius: 3px;
        }

        .activity-feed::-webkit-scrollbar-thumb {
            background: #334155;
            border-radius: 3px;
        }

        .activity-feed::-webkit-scrollbar-thumb:hover {
            background: #475569;
        }
    </style>
</head>
