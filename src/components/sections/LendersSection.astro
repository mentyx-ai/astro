// src/components/LendersSection.astro
---

<section class="section lenders-section" id="solutions">
  <div class="container">
    
    <h2 class="section-heading centered" data-aos="fade-up">
      Built for Private Real Estate Lenders
    </h2>
    
    <p class="section-lead centered" data-aos="fade-up" data-aos-delay="100">
      From <span class="gradient-text">fix & flip to DSCR rentals</span> — Mentyx understands asset-based lending on single-family properties
    </p>

    <!-- Lender Types Grid -->
    <div class="lenders-grid">
      
      <div class="lender-card" data-aos="fade-up" data-aos-delay="0">
        <div class="lender-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
        </div>
        <h3>Fix & Flip Lenders</h3>
        <p class="lender-desc">Short-term rehab financing with rapid underwriting for experienced investors</p>
        <ul class="lender-features">
          <li>LTV/LTC/ARV analysis</li>
          <li>Rehab budget validation</li>
          <li>6-12 month terms</li>
        </ul>
      </div>

      <div class="lender-card" data-aos="fade-up" data-aos-delay="100">
        <div class="lender-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
            <line x1="12" y1="22.08" x2="12" y2="12"/>
          </svg>
        </div>
        <h3>Bridge Loan Providers</h3>
        <p class="lender-desc">Fast closing on transitional properties while long-term financing is arranged</p>
        <ul class="lender-features">
          <li>Quick close requirements</li>
          <li>Exit strategy validation</li>
          <li>Rate/term refinance paths</li>
        </ul>
      </div>

      <div class="lender-card" data-aos="fade-up" data-aos-delay="200">
        <div class="lender-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
          </svg>
        </div>
        <h3>DSCR Rental Lenders</h3>
        <p class="lender-desc">Cash-flow based lending for buy-and-hold rental property investors</p>
        <ul class="lender-features">
          <li>DSCR calculations</li>
          <li>Rental income verification</li>
          <li>30-year amortization</li>
        </ul>
      </div>

      <div class="lender-card" data-aos="fade-up" data-aos-delay="300">
        <div class="lender-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <rect x="7" y="7" width="3" height="9"/>
            <rect x="14" y="7" width="3" height="5"/>
          </svg>
        </div>
        <h3>Multi-Affiliate Lending Groups</h3>
        <p class="lender-desc">Parent companies with regional lending affiliates across multiple markets</p>
        <ul class="lender-features">
          <li>Cross-entity oversight</li>
          <li>Standardized underwriting</li>
          <li>Centralized reporting</li>
        </ul>
      </div>

      <div class="lender-card" data-aos="fade-up" data-aos-delay="400">
        <div class="lender-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
        </div>
        <h3>Private Money Lenders</h3>
        <p class="lender-desc">High-net-worth individuals and family offices lending on real estate deals</p>
        <ul class="lender-features">
          <li>Flexible underwriting</li>
          <li>Relationship-based lending</li>
          <li>Fast turnaround</li>
        </ul>
      </div>

      <div class="lender-card" data-aos="fade-up" data-aos-delay="500">
        <div class="lender-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
        </div>
        <h3>Neo-Lenders & Startups</h3>
        <p class="lender-desc">New lending companies building from scratch without legacy systems</p>
        <ul class="lender-features">
          <li>All-in-one platform</li>
          <li>Low setup costs</li>
          <li>Scalable infrastructure</li>
        </ul>
      </div>

    </div>

    <!-- Bottom CTA -->
    <div class="lenders-cta" data-aos="fade-up" data-aos-delay="600">
      <p class="cta-text">Handle 1,000+ loans per year or just getting started?</p>
      <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
        See How Mentyx Fits Your Business
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14"/>
          <path d="M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

  </div>
</section>

<style>
  /* LENDERS SECTION SPECIFIC STYLES */
  .lenders-section {
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.5) 0%, rgba(15, 23, 42, 0.8) 100%);
    padding: 100px 0;
  }

  .section-heading.centered {
    text-align: center;
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 24px;
    line-height: 1.1;
    color: white;
  }

  .section-lead.centered {
    text-align: center;
    font-size: 1.5rem;
    color: #94a3b8;
    margin-bottom: 80px;
    line-height: 1.5;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .gradient-text {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lenders-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 32px;
    margin-top: 64px;
  }

  .lender-card {
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(71, 85, 105, 0.5);
    border-radius: 24px;
    padding: 40px 32px;
    text-align: center;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .lender-card:hover {
    border-color: #3b82f6;
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(59, 130, 246, 0.25);
    background: rgba(30, 41, 59, 0.8);
  }

  .lender-icon {
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #06b6d4;
    margin: 0 auto 24px;
    transition: all 0.3s;
  }

  .lender-card:hover .lender-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
  }

  .lender-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    line-height: 1.3;
    margin: 0 0 12px 0;
  }

  .lender-desc {
    color: #94a3b8;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0 0 20px 0;
  }

  .lender-features {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
    width: 100%;
  }

  .lender-features li {
    color: #cbd5e1;
    font-size: 0.875rem;
    padding: 8px 0;
    padding-left: 24px;
    position: relative;
  }

  .lender-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #06b6d4;
    font-weight: bold;
  }

  /* Bottom CTA */
  .lenders-cta {
    text-align: center;
    margin-top: 80px;
    padding-top: 60px;
    border-top: 1px solid rgba(59, 130, 246, 0.1);
  }

  .cta-text {
    font-size: 1.375rem;
    color: #e2e8f0;
    margin: 0 0 32px 0;
    font-weight: 600;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-lg {
    padding: 18px 36px;
    font-size: 1.0625rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  /* Mobile optimization */
  @media (max-width: 768px) {
    .lenders-section {
      padding: 60px 0;
    }
    
    .section-heading.centered {
      font-size: 2.5rem;
    }
    
    .section-lead.centered {
      font-size: 1.25rem;
      margin-bottom: 60px;
    }
    
    .lenders-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-top: 48px;
    }
    
    .lender-card {
      padding: 32px 24px;
    }
    
    .lender-icon {
      width: 64px;
      height: 64px;
      margin-bottom: 20px;
    }
    
    .lender-card h3 {
      font-size: 1.375rem;
    }

    .lender-desc {
      font-size: 0.875rem;
    }

    .lenders-cta {
      margin-top: 60px;
      padding-top: 40px;
    }

    .cta-text {
      font-size: 1.125rem;
      margin-bottom: 24px;
    }

    /* WICHTIG: Button darf nicht breiter als Screen werden */
    .lenders-cta .btn {
      width: 100%;
      max-width: 100%;
      justify-content: center;
      text-align: center;
      white-space: normal;
    }
  }
</style>
