---
// /src/pages/solutions/ai-underwriting.astro
import Layout from '../../components/layouts/Layout.astro';
---

<Layout 
  title="AI Underwriting - Asset-Based Lending Intelligence | Mentyx.ai"
  description="AI-powered underwriting for fix & flip, bridge, and DSCR loans. Risk scoring, automated decisions, and full explainability in one platform."
  canonical="https://mentyx.ai/solutions/ai-underwriting"
>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"/>
            <path d="M12 1v6m0 6v6"/>
            <path d="m4.93 4.93 4.24 4.24m5.66 5.66 4.24 4.24"/>
            <path d="M1 12h6m6 0h6"/>
            <path d="m4.93 19.07 4.24-4.24m5.66-5.66 4.24-4.24"/>
          </svg>
          <span class="ai-badge">AI Underwriting</span>
        </div>
        
        <h1 class="hero-title">
          <span class="title-gradient">AI-Powered</span>
          <span class="title-white">Underwriting</span>
        </h1>
        
        <p class="hero-subtitle">
          Automated underwriting for fix & flip, bridge, and DSCR loans. Extract data, score risk, make decisions—all in one AI-powered platform.
        </p>

        <div class="hero-buttons">
          <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
            Schedule Demo
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14"/>
              <path d="M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/platform" class="btn btn-secondary btn-lg">
            View Platform
          </a>
        </div>

        <!-- Stats -->
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-value">60%</div>
            <div class="stat-label">Faster Decisions</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-value">90%</div>
            <div class="stat-label">Accuracy Rate</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-value">100%</div>
            <div class="stat-label">Explainable</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- AI Solutions Overview -->
  <section class="ai-solutions-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Complete AI Underwriting Suite</h2>
        <p class="section-subtitle">Three integrated AI modules for end-to-end loan decisioning</p>
      </div>

      <div class="ai-solutions-grid">
        
        <!-- Risk Scoring -->
        <a href="/solutions/risk-scoring" class="solution-card">
          <div class="solution-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
            </svg>
          </div>
          <h3 class="solution-title">Risk Scoring</h3>
          <p class="solution-description">
            ML-based risk analysis for LTV, LTC, DSCR, and ARV calculations. Real-time scoring with property-specific risk factors.
          </p>
          <div class="solution-features">
            <span>• LTV/LTC Analysis</span>
            <span>• DSCR Calculation</span>
            <span>• ARV Estimation</span>
            <span>• Default Prediction</span>
          </div>
          <div class="solution-link">
            Learn More →
          </div>
        </a>

        <!-- Decision Engine -->
        <a href="/solutions/decision-engine" class="solution-card solution-card-highlight">
          <div class="solution-badge">Most Popular</div>
          <div class="solution-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2v20M2 12h20"/>
              <circle cx="12" cy="12" r="2"/>
            </svg>
          </div>
          <h3 class="solution-title">Decision Engine</h3>
          <p class="solution-description">
            Automated approve/decline based on your credit policy. Visual rule builder, tiered decisioning, 70% auto-approval rate.
          </p>
          <div class="solution-features">
            <span>• Custom Rule Builder</span>
            <span>• Tiered Decisioning</span>
            <span>• Exception Handling</span>
            <span>• Instant Approvals</span>
          </div>
          <div class="solution-link">
            Learn More →
          </div>
        </a>

        <!-- Explainable AI -->
        <a href="/solutions/explainable-ai" class="solution-card">
          <div class="solution-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <h3 class="solution-title">Explainable AI</h3>
          <p class="solution-description">
            Full transparency into every AI decision. Compliance-ready audit trails, factor analysis, and adverse action notices.
          </p>
          <div class="solution-features">
            <span>• Decision Breakdown</span>
            <span>• Risk Flag Explanations</span>
            <span>• Audit Trails</span>
            <span>• Compliance Reports</span>
          </div>
          <div class="solution-link">
            Learn More →
          </div>
        </a>

      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">How AI Underwriting Works</h2>
        <p class="section-subtitle">From application to decision in seconds</p>
      </div>

      <div class="workflow-steps">
        
        <div class="workflow-step">
          <div class="step-number">1</div>
          <h3>Data Extraction</h3>
          <p>AI reads credit reports, bank statements, tax returns, and appraisals. Extracts LTV, credit score, liquidity, experience.</p>
        </div>

        <div class="workflow-arrow">→</div>

        <div class="workflow-step">
          <div class="step-number">2</div>
          <h3>Risk Scoring</h3>
          <p>ML models analyze LTV/LTC, DSCR, ARV ratio, borrower experience, property condition. Assigns 0-100 risk score.</p>
        </div>

        <div class="workflow-arrow">→</div>

        <div class="workflow-step">
          <div class="step-number">3</div>
          <h3>Decision Engine</h3>
          <p>Rules evaluate against your credit policy. Auto-approve (70%), conditional (20%), or decline (10%) with reasoning.</p>
        </div>

        <div class="workflow-arrow">→</div>

        <div class="workflow-step">
          <div class="step-number">4</div>
          <h3>Explainability</h3>
          <p>Every decision includes full breakdown—which rules triggered, risk factors, data sources, confidence scores.</p>
        </div>

      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="features-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Built for Asset-Based Lending</h2>
        <p class="section-subtitle">Designed specifically for fix & flip, bridge, and DSCR loans</p>
      </div>

      <div class="features-grid">
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
          </div>
          <h3 class="feature-title">Property-Specific Analysis</h3>
          <p class="feature-description">
            Understands fix & flip (ARV, rehab scope), bridge (stabilization exit), DSCR (rental income). Not generic mortgage AI.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
              <circle cx="8.5" cy="7" r="4"/>
              <path d="M20 8v6M23 11h-6"/>
            </svg>
          </div>
          <h3 class="feature-title">Experience Weighting</h3>
          <p class="feature-description">
            First-time flipper vs. 50-flip veteran treated differently. Tracks completed projects, payment history, default rates.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
              <path d="M16 21V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v16"/>
            </svg>
          </div>
          <h3 class="feature-title">Liquidity Requirements</h3>
          <p class="feature-description">
            Verifies post-close reserves—10-15% of loan amount in liquid assets. Flags insufficient liquidity before approval.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <h3 class="feature-title">Market Intelligence</h3>
          <p class="feature-description">
            Neighborhood risk scoring (A/B/C/D), Days on Market analysis, local ARV comps. Adjusts LTV by market tier.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <h3 class="feature-title">Exit Strategy Validation</h3>
          <p class="feature-description">
            For bridge/DSCR: validates rental income projections, lease-up timeline, refinance capacity based on rate environment.
          </p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14.7 6.3a1 1 0 000 1.4l1.6 1.6a1 1 0 001.4 0l3.77-3.77a6 6 0 01-7.94 7.94l-6.91 6.91a2.12 2.12 0 01-3-3l6.91-6.91a6 6 0 017.94-7.94l-3.76 3.76z"/>
            </svg>
          </div>
          <h3 class="feature-title">Custom Training</h3>
          <p class="feature-description">
            Train AI on your historical loans—your risk appetite, your performance data, your credit box. Not one-size-fits-all.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="benefits-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Why Lenders Choose Mentyx AI</h2>
        <p class="section-subtitle">Speed, accuracy, and compliance in one platform</p>
      </div>

      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-number">01</div>
          <h3>Same-Day Decisions</h3>
          <p>Go from 3-5 days to same-day approvals. 70% of clean deals auto-approved in seconds. Win deals against slower competitors.</p>
        </div>

        <div class="benefit-card">
          <div class="benefit-number">02</div>
          <h3>Higher Accuracy</h3>
          <p>90%+ decision accuracy with ML models trained on real estate lending data. Fewer defaults, better portfolio performance.</p>
        </div>

        <div class="benefit-card">
          <div class="benefit-number">03</div>
          <h3>Scale Without Headcount</h3>
          <p>Handle 3x loan volume without hiring more underwriters. AI approves routine deals, humans focus on complex cases.</p>
        </div>

        <div class="benefit-card">
          <div class="benefit-number">04</div>
          <h3>Full Compliance</h3>
          <p>Every decision documented, explainable, and auditable. ECOA/Fair Lending compliant with adverse action notices.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">See AI Underwriting Live</h2>
        <p class="cta-subtitle">Watch us process a fix & flip loan from application to approval</p>
        <div class="cta-buttons">
          <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
            Schedule Demo
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14"/>
              <path d="M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/solutions/risk-scoring" class="btn btn-secondary btn-lg">
            Explore Risk Scoring
          </a>
          <a href="/solutions" class="btn btn-tertiary btn-lg">
            View All Solutions
          </a>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* AI Badge Animation */
  .ai-badge {
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: violetPulse 2s ease-in-out infinite;
  }

  @keyframes violetPulse {
    0%, 100% {
      opacity: 1;
      filter: brightness(1);
    }
    50% {
      opacity: 0.85;
      filter: brightness(1.3);
    }
  }

  /* Hero Section */
  .hero-section {
    padding: 160px 0 100px;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(167, 139, 250, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 32px;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 24px 0;
  }

  .title-gradient {
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title-white {
    color: white;
  }

  .hero-subtitle {
    font-size: 1.375rem;
    line-height: 1.6;
    color: #94a3b8;
    margin: 0 0 48px 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 64px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-lg {
    padding: 18px 36px;
    font-size: 1.0625rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(59, 130, 246, 0.1);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .btn-tertiary {
    background: rgba(15, 23, 42, 0.8);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-tertiary:hover {
    background: rgba(15, 23, 42, 1);
    border-color: rgba(6, 182, 212, 0.5);
    color: #22d3ee;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
    padding: 32px 48px;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 20px;
    backdrop-filter: blur(12px);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .stat-label {
    color: #94a3b8;
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 60px;
    background: rgba(139, 92, 246, 0.2);
  }

  /* AI Solutions Section */
  .ai-solutions-section {
    padding: 120px 0;
    background: #0f172a;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 16px 0;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0;
  }

  .ai-solutions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 32px;
  }

  .solution-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(15, 23, 42, 0.4) 100%);
    border: 1px solid rgba(139, 92, 246, 0.15);
    border-radius: 24px;
    padding: 40px;
    text-decoration: none;
    display: block;
    transition: all 0.3s ease;
    position: relative;
  }

  .solution-card:hover {
    border-color: rgba(139, 92, 246, 0.4);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
  }

  .solution-card-highlight {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.08) 0%, rgba(167, 139, 250, 0.05) 100%);
    border-color: rgba(139, 92, 246, 0.3);
  }

  .solution-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    color: white;
    padding: 6px 14px;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .solution-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(167, 139, 250, 0.1) 100%);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #a78bfa;
    margin-bottom: 20px;
    transition: all 0.3s ease;
  }

  .solution-card:hover .solution-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(139, 92, 246, 0.3);
  }

  .solution-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 12px 0;
  }

  .solution-description {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 20px 0;
    font-size: 1rem;
  }

  .solution-features {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 20px;
  }

  .solution-features span {
    color: #cbd5e1;
    font-size: 0.875rem;
  }

  .solution-link {
    color: #a78bfa;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: all 0.3s ease;
  }

  .solution-card:hover .solution-link {
    color: #c4b5fd;
  }

  /* How It Works Section */
  .how-it-works-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
  }

  .workflow-steps {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 24px;
    flex-wrap: wrap;
  }

  .workflow-step {
    background: rgba(15, 23, 42, 0.8);
    border: 2px solid rgba(139, 92, 246, 0.3);
    border-radius: 20px;
    padding: 32px 28px;
    text-align: center;
    min-width: 220px;
    max-width: 240px;
    transition: all 0.3s ease;
  }

  .workflow-step:hover {
    transform: translateY(-4px);
    border-color: rgba(139, 92, 246, 0.5);
  }

  .step-number {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    margin: 0 auto 20px;
  }

  .workflow-step h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
    margin: 0 0 12px 0;
  }

  .workflow-step p {
    font-size: 0.875rem;
    color: #94a3b8;
    margin: 0;
    line-height: 1.6;
  }

  .workflow-arrow {
    font-size: 2.5rem;
    color: #a78bfa;
    font-weight: 300;
    align-self: center;
  }

  /* Features Section */
  .features-section {
    padding: 120px 0;
    background: #0f172a;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .feature-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(15, 23, 42, 0.4) 100%);
    border: 1px solid rgba(139, 92, 246, 0.15);
    border-radius: 24px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    border-color: rgba(139, 92, 246, 0.4);
    transform: translateY(-8px);
