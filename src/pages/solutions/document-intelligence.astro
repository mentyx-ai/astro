      border: 1px solid rgba(59, 130, 246, 0.1);
      border-radius: 20px;
      backdrop-filter: blur(12px);
    }

    .stat-item {
      text-align: center;
    }

    .stat-value {
      font-size: 2.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 8px;
    }

    .stat-label {
      color: #94a3b8;
      font-size: 0.9375rem;
      font-weight: 500;
    }

    .stat-divider {
      width: 1px;
      height: 60px;
      background: rgba(59, 130, 246, 0.2);
    }

    /* Features Section */
    .features-section {
      padding: 120px 0;
      background: #0f172a;
    }

    .section-header {
      text-align: center;
      margin-bottom: 80px;
    }

    .section-title {
      font-size: 3rem;
      font-weight: 800;
      color: white;
      margin: 0 0 16px 0;
    }

    .section-subtitle {
      font-size: 1.25rem;
      color: #64748b;
      margin: 0;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 32px;
    }

    .feature-card {
      background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(15, 23, 42, 0.4) 100%);
      border: 1px solid rgba(59, 130, 246, 0.1);
      border-radius: 24px;
      padding: 40px;
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      border-color: rgba(59, 130, 246, 0.3);
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .feature-icon {
      width: 72px;
      height: 72px;
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);
      border: 1px solid rgba(59, 130, 246, 0.3);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #06b6d4;
      margin-bottom: 24px;
      transition: all 0.3s ease;
    }

    .feature-card:hover .feature-icon {
      transform: scale(1.1) rotate(5deg);
      box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
    }

    .feature-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: white;
      margin: 0 0 16px 0;
    }

    .feature-description {
      color: #94a3b8;
      line-height: 1.7;
