<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Schedule Demo Button
    const scheduleDemoBtn = document.getElementById('scheduleDemo');
    scheduleDemoBtn?.addEventListener('click', () => {
      window.open('https://calendly.com/contact-mentyx/30min', '_blank');
    });

    // ROI Calculator
    const loanVolumeInput = document.getElementById('loanVolume');
    const hourlyRateInput = document.getElementById('hourlyRate');
    const processingTimeInput = document.getElementById('processingTime');

    function calculateROI() {
      const volume = parseInt(loanVolumeInput.value) || 0;
      const rate = parseInt(hourlyRateInput.value) || 0;
      const time = parseInt(processingTimeInput.value) || 0;

      const currentCost = volume * time * rate;
      const automatedTime = time * 0.2; // 80% reduction
      const automatedCost = volume * automatedTime * rate;
      const monthlySavings = currentCost - automatedCost;
      const annualSavings = monthlySavings * 12;
      const implementationCost = 30000; // Estimated
      const paybackMonths = implementationCost / monthlySavings;

      document.getElementById('currentCost').textContent = '$' + currentCost.toLocaleString();
      document.getElementById('automatedCost').textContent = '$' + Math.round(automatedCost).toLocaleString();
      document.getElementById('monthlySavings').textContent = '$' + Math.round(monthlySavings).toLocaleString();
      document.getElementById('annualSavings').textContent = '$' + Math.round(annualSavings).toLocaleString();
      document.getElementById('paybackPeriod').textContent = paybackMonths.toFixed(1) + ' months';
    }

    loanVolumeInput?.addEventListener('input', calculateROI);
    hourlyRateInput?.addEventListener('input', calculateROI);
    processingTimeInput?.addEventListener('input', calculateROI);

    // Initial calculation
    calculateROI();
  });
