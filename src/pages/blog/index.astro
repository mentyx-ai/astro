</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Elements
    const modal = document.getElementById('downloadModal');
    const downloadFormSection = document.getElementById('downloadFormSection');
    const downloadSuccessSection = document.getElementById('downloadSuccessSection');
    const downloadForm = document.getElementById('downloadForm');
    const resourceNameInput = document.getElementById('resourceName');
    const formSubjectInput = document.getElementById('formSubject');
    const modalResourceTitle = document.getElementById('modalResourceTitle');
    const confirmDownloadEmail = document.getElementById('confirmDownloadEmail');
    const confirmResourceName = document.getElementById('confirmResourceName');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const closeSuccessBtn = document.getElementById('closeSuccessBtn');
    const downloadFormStatus = document.getElementById('downloadFormStatus');

    let currentResource = '';

    // Resource mapping for PDF downloads
    const resourceMap = {
      'State of Loan Origination 2025': {
        url: '/downloads/state-of-loan-origination-2025.pdf',
        filename: 'Mentyx-State-of-Loan-Origination-2025.pdf'
      },
      'Implementation Checklist': {
        url: '/downloads/ai-implementation-checklist.pdf',
        filename: 'Mentyx-AI-Implementation-Checklist.pdf'
      },
      'Document Intelligence Guide': {
        url: '/downloads/document-intelligence-guide.pdf',
        filename: 'Mentyx-Document-Intelligence-Guide.pdf'
      },
      'Private Lending Benchmark 2025': {
        url: '/downloads/private-lending-benchmark-2025.pdf',
        filename: 'Mentyx-Private-Lending-Benchmark-2025.pdf'
      }
    };

    // Download button functionality
    document.querySelectorAll('.download-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        currentResource = btn.dataset.resource || 'Resource';
        
        if (resourceNameInput) resourceNameInput.value = currentResource;
        if (formSubjectInput) formSubjectInput.value = `Blog Resource Download: ${currentResource}`;
        if (modalResourceTitle) modalResourceTitle.textContent = `Download ${currentResource}`;
        
        if (modal) {
          modal.classList.add('active');
          downloadFormSection.style.display = 'block';
          downloadSuccessSection.classList.remove('active');
          downloadForm?.reset();
          downloadFormStatus.style.display = 'none';
        }
        
        document.body.style.overflow = 'hidden';
      });
    });

    // Close modal
    function closeModal() {
      if (modal) modal.classList.remove('active');
      document.body.style.overflow = '';
      downloadForm?.reset();
      downloadFormStatus.style.display = 'none';
    }

    closeModalBtn?.addEventListener('click', closeModal);
    closeSuccessBtn?.addEventListener('click', closeModal);

    modal?.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Download form submission with Web3Forms
    downloadForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const submitBtn = downloadForm.querySelector('button[type="submit"]');
      const btnText = submitBtn.querySelector('.btn-text');
      const btnLoader = submitBtn.querySelector('.btn-loader');
      
      btnText.style.display = 'none';
      btnLoader.style.display = 'inline-block';
      submitBtn.disabled = true;
      downloadFormStatus.style.display = 'none';
      
      try {
        const formData = new FormData(downloadForm);
        const response = await fetch(downloadForm.action, {
          method: 'POST',
          body: formData,
        });
        
        const result = await response.json();
        
        if (result.success) {
          if (resourceMap[currentResource]) {
            const resource = resourceMap[currentResource];
            const link = document.createElement('a');
            link.href = resource.url;
            link.download = resource.filename;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
          }
          
          downloadFormSection.style.display = 'none';
          downloadSuccessSection.classList.add('active');
          confirmDownloadEmail.textContent = document.getElementById('download_email').value;
          confirmResourceName.textContent = currentResource;
          
        } else {
          throw new Error(result.message || 'Form submission failed');
        }
        
      } catch (error) {
        console.error('Download failed:', error);
        
        downloadFormStatus.className = 'form-status error';
        downloadFormStatus.textContent = 'Form submission failed, but your download is starting...';
        downloadFormStatus.style.display = 'block';
        
        if (resourceMap[currentResource]) {
          const resource = resourceMap[currentResource];
          const link = document.createElement('a');
          link.href = resource.url;
          link.download = resource.filename;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
        }
        
        setTimeout(() => {
          downloadFormSection.style.display = 'none';
          downloadSuccessSection.classList.add('active');
          confirmDownloadEmail.textContent = document.getElementById('download_email').value;
          confirmResourceName.textContent = currentResource;
        }, 1000);
      } finally {
        btnText.style.display = 'inline';
        btnLoader.style.display = 'none';
        submitBtn.disabled = false;
      }
    });

    // Filter functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    const articles = document.querySelectorAll('.article-card, .featured-article');
    const searchBox = document.getElementById('searchBox');
    const loadMoreBtn = document.getElementById('loadMore');
    const scheduleDemoBtn = document.getElementById('scheduleDemoBtn');
    const newsletterForm = document.getElementById('newsletterForm');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.dataset.category;
        
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        articles.forEach(article => {
          if (category === 'all' || article.dataset.category === category) {
            article.style.display = 'flex';
          } else {
            article.style.display = 'none';
          }
        });
      });
    });

    // Search functionality
    if (searchBox) {
      searchBox.addEventListener('input', (e) => {
        const searchTerm = e.target.value.toLowerCase();
        
        articles.forEach(article => {
          const title = article.querySelector('h2, h3').textContent.toLowerCase();
          const description = article.querySelector('p').textContent.toLowerCase();
          
          if (title.includes(searchTerm) || description.includes(searchTerm)) {
            article.style.display = 'flex';
          } else {
            article.style.display = 'none';
          }
        });
      });
    }

    // Schedule demo
    scheduleDemoBtn?.addEventListener('click', () => {
      window.open('https://calendly.com/contact-mentyx/30min', '_blank');
    });

    // Newsletter
    newsletterForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Thanks for subscribing!');
      newsletterForm.reset();
    });

    // Load more
    let visibleCount = 6;
    const allArticles = document.querySelectorAll('.article-card');

    allArticles.forEach((article, index) => {
      if (index >= visibleCount) article.style.display = 'none';
    });

    loadMoreBtn?.addEventListener('click', () => {
      visibleCount += 3;
      allArticles.forEach((article, index) => {
        if (index < visibleCount) article.style.display = 'flex';
      });
      
      if (visibleCount >= allArticles.length) {
        loadMoreBtn.style.display = 'none';
      }
    });
  });
</script>
</Layout>