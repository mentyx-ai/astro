    .tools-grid,
    .articles-grid {
      grid-template-columns: 1fr;
    }

    .tool-actions {
      flex-direction: column;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .cta-title {
      font-size: 2rem;
    }

    .filter-buttons {
      justify-content: flex-start;
    }

    .modal-content {
      padding: 32px 24px;
