---
// /src/pages/solutions/debt-recovery.astro
import Layout from '../../components/layouts/Layout.astro';
---

<Layout 
  title="Debt Recovery Management - Optimize Collections | Mentyx.ai"
  description="AI-powered debt recovery and collections management. Automate workflows, prioritize accounts, and maximize recovery rates while maintaining compliance."
>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
        </svg>
        <span>Collections Management</span>
      </div>
      
      <h1 class="hero-title">
        Intelligent Debt Recovery
      </h1>
      
      <p class="hero-subtitle">
        Maximize recovery rates with AI-powered collections strategies, automated workflows, and compliance-first approaches that preserve customer relationships.
      </p>

      <div class="hero-buttons">
        <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
          Schedule Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/#platform" class="btn btn-secondary btn-lg">
          View Platform
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-value">45%</div>
          <div class="stat-label">Higher Recovery Rates</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">60%</div>
          <div class="stat-label">Faster Resolution</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">100%</div>
          <div class="stat-label">FDCPA Compliant</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Grid -->
<section class="features-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Comprehensive Collections Platform</h2>
      <p class="section-subtitle">Everything you need to recover debt efficiently and compliantly</p>
    </div>

    <div class="features-grid">
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <h3 class="feature-title">Smart Prioritization</h3>
        <p class="feature-description">
          AI-driven account scoring that prioritizes collection efforts based on probability to pay and account value.
        </p>
        <ul class="feature-list">
          <li>Predictive recovery scoring</li>
          <li>Optimal contact timing</li>
          <li>Resource allocation optimization</li>
          <li>ROI-focused queuing</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
        </div>
        <h3 class="feature-title">Automated Workflows</h3>
        <p class="feature-description">
          Streamline collections with automated communication sequences, reminders, and escalation protocols.
        </p>
        <ul class="feature-list">
          <li>Multi-channel outreach campaigns</li>
          <li>Automated payment reminders</li>
          <li>Escalation rule engines</li>
          <li>Self-service payment portals</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
        </div>
        <h3 class="feature-title">Compliance Management</h3>
        <p class="feature-description">
          Built-in compliance controls ensure adherence to FDCPA, TCPA, state regulations, and internal policies.
        </p>
        <ul class="feature-list">
          <li>FDCPA compliance monitoring</li>
          <li>TCPA consent tracking</li>
          <li>State-specific regulations</li>
          <li>Communication audit trails</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
          </svg>
        </div>
        <h3 class="feature-title">Payment Processing</h3>
        <p class="feature-description">
          Flexible payment options with integrated processing, automated posting, and settlement tracking.
        </p>
        <ul class="feature-list">
          <li>Multiple payment methods</li>
          <li>Payment plan management</li>
          <li>Automated reconciliation</li>
          <li>Partial payment handling</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
        </div>
        <h3 class="feature-title">Skip Tracing</h3>
        <p class="feature-description">
          Advanced skip tracing tools and data sources to locate debtors and update contact information.
        </p>
        <ul class="feature-list">
          <li>Automated skip tracing</li>
          <li>Contact verification</li>
          <li>Address validation</li>
          <li>Third-party data integration</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
          </svg>
        </div>
        <h3 class="feature-title">Dispute Management</h3>
        <p class="feature-description">
          Centralized dispute tracking with automated workflows for investigation, documentation, and resolution.
        </p>
        <ul class="feature-list">
          <li>Dispute intake and tracking</li>
          <li>Investigation workflows</li>
          <li>Documentation management</li>
          <li>Resolution tracking</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 3v18h18"/>
            <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>
          </svg>
        </div>
        <h3 class="feature-title">Performance Analytics</h3>
        <p class="feature-description">
          Comprehensive reporting on recovery rates, agent performance, and portfolio metrics.
        </p>
        <ul class="feature-list">
          <li>Recovery rate tracking</li>
          <li>Agent performance metrics</li>
          <li>Portfolio aging analysis</li>
          <li>ROI reporting</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="16 18 22 12 16 6"/>
            <polyline points="8 6 2 12 8 18"/>
          </svg>
        </div>
        <h3 class="feature-title">System Integration</h3>
        <p class="feature-description">
          Seamlessly integrate with core banking systems, payment processors, and communication platforms.
        </p>
        <ul class="feature-list">
          <li>Core system connectivity</li>
          <li>Payment gateway integration</li>
          <li>CRM synchronization</li>
          <li>Dialer integration</li>
        </ul>
      </div>

    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Why Choose Mentyx Debt Recovery</h2>
      <p class="section-subtitle">Recover more while preserving customer relationships</p>
    </div>

    <div class="benefits-grid">
      <div class="benefit-card">
        <div class="benefit-number">01</div>
        <h3>Maximize Recovery Rates</h3>
        <p>AI-powered prioritization and personalized strategies increase recovery rates by up to 45% compared to traditional methods.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">02</div>
        <h3>Reduce Operational Costs</h3>
        <p>Automation eliminates 60% of manual collection tasks, reducing costs per dollar collected significantly.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">03</div>
        <h3>Ensure Compliance</h3>
        <p>Built-in compliance controls and audit trails protect your organization from regulatory violations and penalties.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">04</div>
        <h3>Preserve Relationships</h3>
        <p>Respectful, personalized communication strategies help maintain positive customer relationships even during collections.</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Ready to Transform Your Collections?</h2>
      <p class="cta-subtitle">See how Mentyx helps lenders recover more debt efficiently and compliantly</p>
      <div class="cta-buttons">
        <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
          Schedule Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/#platform" class="btn btn-secondary btn-lg">
          Explore Platform
        </a>
        <a href="/solutions" class="btn btn-tertiary btn-lg">
          View All Solutions
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero-section {
    padding: 160px 0 100px;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(6, 182, 212, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 9999px;
    color: #06b6d4;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 32px;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    color: white;
    margin: 0 0 24px 0;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.375rem;
    line-height: 1.6;
    color: #94a3b8;
    margin: 0 0 48px 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 64px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-lg {
    padding: 18px 36px;
    font-size: 1.0625rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(59, 130, 246, 0.1);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .btn-tertiary {
    background: rgba(15, 23, 42, 0.8);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-tertiary:hover {
    background: rgba(15, 23, 42, 1);
    border-color: rgba(6, 182, 212, 0.5);
    color: #22d3ee;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
    padding: 32px 48px;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    backdrop-filter: blur(12px);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .stat-label {
    color: #94a3b8;
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 60px;
    background: rgba(59, 130, 246, 0.2);
  }

  /* Features Section */
  .features-section {
    padding: 120px 0;
    background: #0f172a;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 16px 0;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .feature-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(15, 23, 42, 0.4) 100%);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 24px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-icon {
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #06b6d4;
    margin-bottom: 24px;
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
  }

  .feature-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 16px 0;
  }

  .feature-description {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 24px 0;
    font-size: 1rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-list li {
    color: #cbd5e1;
    padding: 10px 0;
    padding-left: 28px;
    position: relative;
    font-size: 0.9375rem;
  }

  .feature-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #06b6d4;
    font-weight: bold;
  }

  /* Benefits Section */
  .benefits-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
  }

  .benefit-card {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-4px);
  }

  .benefit-number {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .benefit-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 16px 0;
  }

  .benefit-card p {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    padding: 120px 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 24px 0;
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: #94a3b8;
    margin: 0 0 48px 0;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 32px;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .section-title {
      font-size: 2rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 2rem;
    }
  }
</style>

</Layout>