---
// /src/pages/solutions/portfolio-analytics.astro
import Layout from '../../components/layouts/Layout.astro';
---

<Layout 
  title="Portfolio Analytics - Performance Insights & Reporting | Mentyx.ai"
  description="Real-time loan portfolio analytics with customizable dashboards, performance metrics, risk analysis, and automated reporting for data-driven lending decisions."
>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 3v18h18"/>
          <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>
        </svg>
        <span>Business Intelligence</span>
      </div>
      
      <h1 class="hero-title">
        Advanced Portfolio Analytics
      </h1>
      
      <p class="hero-subtitle">
        Transform lending data into actionable insights with real-time dashboards, predictive analytics, and comprehensive reporting. Make smarter decisions backed by data.
      </p>

      <div class="hero-buttons">
        <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
          Schedule Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/#platform" class="btn btn-secondary btn-lg">
          View Platform
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-value">Real-Time</div>
          <div class="stat-label">Data Updates</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">200+</div>
          <div class="stat-label">Built-in Reports</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">100%</div>
          <div class="stat-label">Customizable</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Grid -->
<section class="features-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Complete Portfolio Intelligence</h2>
      <p class="section-subtitle">Everything you need to monitor, analyze, and optimize lending performance</p>
    </div>

    <div class="features-grid">
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"/>
            <rect x="14" y="3" width="7" height="7"/>
            <rect x="14" y="14" width="7" height="7"/>
            <rect x="3" y="14" width="7" height="7"/>
          </svg>
        </div>
        <h3 class="feature-title">Custom Dashboards</h3>
        <p class="feature-description">
          Build personalized dashboards with drag-and-drop widgets. Monitor key metrics and KPIs that matter most to your business.
        </p>
        <ul class="feature-list">
          <li>Drag-and-drop interface</li>
          <li>Customizable widgets</li>
          <li>Real-time data updates</li>
          <li>Role-based views</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
          </svg>
        </div>
        <h3 class="feature-title">Performance Metrics</h3>
        <p class="feature-description">
          Track portfolio health with comprehensive metrics including delinquency rates, charge-offs, yields, and more.
        </p>
        <ul class="feature-list">
          <li>Delinquency tracking</li>
          <li>Yield analysis</li>
          <li>Loss rates & charge-offs</li>
          <li>Prepayment speeds</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"/>
            <path d="M12 1v6m0 6v6"/>
            <path d="m4.93 4.93 4.24 4.24m5.66 5.66 4.24 4.24"/>
            <path d="M1 12h6m6 0h6"/>
            <path d="m4.93 19.07 4.24-4.24m5.66-5.66 4.24-4.24"/>
          </svg>
        </div>
        <h3 class="feature-title">Predictive Analytics</h3>
        <p class="feature-description">
          AI-powered forecasting for portfolio performance, delinquency trends, and potential losses before they occur.
        </p>
        <ul class="feature-list">
          <li>Delinquency prediction</li>
          <li>Default probability modeling</li>
          <li>Portfolio stress testing</li>
          <li>Scenario analysis</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 8v4"/>
            <path d="M12 16h.01"/>
          </svg>
        </div>
        <h3 class="feature-title">Risk Analysis</h3>
        <p class="feature-description">
          Comprehensive risk monitoring with concentration analysis, geographic exposure, and borrower segmentation.
        </p>
        <ul class="feature-list">
          <li>Concentration risk metrics</li>
          <li>Geographic analysis</li>
          <li>Borrower segmentation</li>
          <li>Vintage analysis</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
          </svg>
        </div>
        <h3 class="feature-title">Automated Reporting</h3>
        <p class="feature-description">
          Schedule and automate reports for stakeholders, investors, and regulators with customizable templates and delivery.
        </p>
        <ul class="feature-list">
          <li>Scheduled report delivery</li>
          <li>Custom report templates</li>
          <li>Multiple export formats</li>
          <li>Investor reporting</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="1" x2="12" y2="23"/>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
        </div>
        <h3 class="feature-title">Profitability Analysis</h3>
        <p class="feature-description">
          Understand profit drivers with detailed analytics on yields, costs, and net returns by product, vintage, and channel.
        </p>
        <ul class="feature-list">
          <li>Yield curve analysis</li>
          <li>Cost per loan tracking</li>
          <li>ROI calculations</li>
          <li>Product profitability</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
            <line x1="12" y1="22.08" x2="12" y2="12"/>
          </svg>
        </div>
        <h3 class="feature-title">Cohort Analysis</h3>
        <p class="feature-description">
          Track loan cohorts by vintage, channel, product type, or custom segments to identify trends and patterns.
        </p>
        <ul class="feature-list">
          <li>Vintage tracking</li>
          <li>Channel performance</li>
          <li>Product comparison</li>
          <li>Custom segmentation</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
            <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
          </svg>
        </div>
        <h3 class="feature-title">Smart Alerts</h3>
        <p class="feature-description">
          Configure custom alerts for portfolio metrics, thresholds, and anomalies with multi-channel notifications.
        </p>
        <ul class="feature-list">
          <li>Custom threshold alerts</li>
          <li>Anomaly detection</li>
          <li>Multi-channel delivery</li>
          <li>Alert escalation rules</li>
        </ul>
      </div>

    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Why Choose Mentyx Portfolio Analytics</h2>
      <p class="section-subtitle">Turn data into your competitive advantage</p>
    </div>

    <div class="benefits-grid">
      <div class="benefit-card">
        <div class="benefit-number">01</div>
        <h3>Make Faster Decisions</h3>
        <p>Real-time dashboards and instant insights eliminate report delays. React to portfolio changes immediately, not days later.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">02</div>
        <h3>Reduce Risk</h3>
        <p>Predictive analytics and early warning systems help you identify and mitigate risks before they impact performance.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">03</div>
        <h3>Maximize Returns</h3>
        <p>Deep profitability insights help you optimize pricing, identify top-performing products, and allocate capital efficiently.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">04</div>
        <h3>Simplify Reporting</h3>
        <p>Automated reports save hundreds of hours annually while ensuring consistency and accuracy for all stakeholders.</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Ready to Unlock Portfolio Insights?</h2>
      <p class="cta-subtitle">See how Mentyx transforms lending data into competitive advantage</p>
      <div class="cta-buttons">
        <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
          Schedule Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/#platform" class="btn btn-secondary btn-lg">
          Explore Platform
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Reuse the same styling as previous pages */
  /* Copy the style block from loan-management.astro or any other solution page */
  /* I'm keeping the same styles for consistency */
  
  .hero-section {
    padding: 160px 0 100px;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(6, 182, 212, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 9999px;
    color: #06b6d4;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 32px;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    color: white;
    margin: 0 0 24px 0;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.375rem;
    line-height: 1.6;
    color: #94a3b8;
    margin: 0 0 48px 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 64px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-lg {
    padding: 18px 36px;
    font-size: 1.0625rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(59, 130, 246, 0.1);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
    padding: 32px 48px;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    backdrop-filter: blur(12px);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .stat-label {
    color: #94a3b8;
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 60px;
    background: rgba(59, 130, 246, 0.2);
  }

  .features-section {
    padding: 120px 0;
    background: #0f172a;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 16px 0;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .feature-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(15, 23, 42, 0.4) 100%);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 24px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-icon {
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #06b6d4;
    margin-bottom: 24px;
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
  }

  .feature-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 16px 0;
  }

  .feature-description {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 24px 0;
    font-size: 1rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-list li {
    color: #cbd5e1;
    padding: 10px 0;
    padding-left: 28px;
    position: relative;
    font-size: 0.9375rem;
  }

  .feature-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #06b6d4;
    font-weight: bold;
  }

  .benefits-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
  }

  .benefit-card {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-4px);
  }

  .benefit-number {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .benefit-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 16px 0;
  }

  .benefit-card p {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0;
  }

  .cta-section {
    padding: 120px 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 24px 0;
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: #94a3b8;
    margin: 0 0 48px 0;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 32px;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .section-title {
      font-size: 2rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 2rem;
    }
  }
</style>

</Layout>