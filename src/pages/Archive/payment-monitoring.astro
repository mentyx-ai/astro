---
// /src/pages/solutions/payment-monitoring.astro
import Layout from '../../components/layouts/Layout.astro';
---

<Layout 
  title="Payment Monitoring System - Track & Analyze Payments | Mentyx.ai"
  description="Real-time payment monitoring and analytics. Track payment behavior, detect anomalies, and optimize collections with AI-powered insights."
>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-badge">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
          <line x1="1" y1="10" x2="23" y2="10"/>
        </svg>
        <span>Payment Intelligence</span>
      </div>
      
      <h1 class="hero-title">
        Smart Payment Monitoring
      </h1>
      
      <p class="hero-subtitle">
        Track payment behavior in real-time, identify patterns, and predict payment issues before they occur with AI-powered monitoring and analytics.
      </p>

      <div class="hero-buttons">
        <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
          Schedule Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/#platform" class="btn btn-secondary btn-lg">
          View Platform
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-value">Real-Time</div>
          <div class="stat-label">Payment Tracking</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">85%</div>
          <div class="stat-label">Issue Detection</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-value">50%</div>
          <div class="stat-label">Faster Resolution</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Grid -->
<section class="features-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Comprehensive Payment Intelligence</h2>
      <p class="section-subtitle">Monitor, analyze, and optimize every aspect of payment performance</p>
    </div>

    <div class="features-grid">
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
          </svg>
        </div>
        <h3 class="feature-title">Real-Time Tracking</h3>
        <p class="feature-description">
          Monitor payment activity as it happens with instant updates and comprehensive transaction visibility.
        </p>
        <ul class="feature-list">
          <li>Live payment processing</li>
          <li>Transaction status updates</li>
          <li>Payment method tracking</li>
          <li>Multi-channel monitoring</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
            <line x1="12" y1="22.08" x2="12" y2="12"/>
          </svg>
        </div>
        <h3 class="feature-title">Pattern Recognition</h3>
        <p class="feature-description">
          AI algorithms identify payment patterns and trends that indicate borrower financial health or distress.
        </p>
        <ul class="feature-list">
          <li>Payment frequency analysis</li>
          <li>Amount pattern detection</li>
          <li>Timing consistency tracking</li>
          <li>Behavioral trend analysis</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 6v6l4 2"/>
          </svg>
        </div>
        <h3 class="feature-title">Delinquency Detection</h3>
        <p class="feature-description">
          Identify missed payments and delinquencies instantly with automated alerts and escalation workflows.
        </p>
        <ul class="feature-list">
          <li>Missed payment alerts</li>
          <li>Grace period tracking</li>
          <li>Escalation automation</li>
          <li>Delinquency staging</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 3v18h18"/>
            <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>
          </svg>
        </div>
        <h3 class="feature-title">Performance Analytics</h3>
        <p class="feature-description">
          Deep analytics on payment performance across portfolios, segments, and individual accounts.
        </p>
        <ul class="feature-list">
          <li>On-time payment rates</li>
          <li>Partial payment tracking</li>
          <li>Collection effectiveness</li>
          <li>Trend visualization</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>
        <h3 class="feature-title">Payment Reconciliation</h3>
        <p class="feature-description">
          Automated reconciliation of payments across systems with discrepancy detection and resolution.
        </p>
        <ul class="feature-list">
          <li>Automated matching</li>
          <li>Exception handling</li>
          <li>Discrepancy alerts</li>
          <li>Audit trail generation</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 8v4"/>
            <path d="M12 16h.01"/>
          </svg>
        </div>
        <h3 class="feature-title">Anomaly Detection</h3>
        <p class="feature-description">
          Machine learning identifies unusual payment behavior that may indicate fraud or financial distress.
        </p>
        <ul class="feature-list">
          <li>Fraud pattern detection</li>
          <li>Unusual activity alerts</li>
          <li>Deviation analysis</li>
          <li>Risk flagging</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
          </svg>
        </div>
        <h3 class="feature-title">Payment Plans</h3>
        <p class="feature-description">
          Create and monitor customized payment plans with automated tracking and compliance monitoring.
        </p>
        <ul class="feature-list">
          <li>Plan configuration</li>
          <li>Milestone tracking</li>
          <li>Compliance monitoring</li>
          <li>Success rate analysis</li>
        </ul>
      </div>

      <div class="feature-card">
        <div class="feature-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="1" x2="12" y2="23"/>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
        </div>
        <h3 class="feature-title">Revenue Forecasting</h3>
        <p class="feature-description">
          Predict future payment performance and revenue based on historical patterns and current trends.
        </p>
        <ul class="feature-list">
          <li>Payment projections</li>
          <li>Revenue forecasting</li>
          <li>Cash flow prediction</li>
          <li>Risk-adjusted estimates</li>
        </ul>
      </div>

    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Why Choose Mentyx Payment Monitoring</h2>
      <p class="section-subtitle">Optimize payment performance with intelligent monitoring</p>
    </div>

    <div class="benefits-grid">
      <div class="benefit-card">
        <div class="benefit-number">01</div>
        <h3>Improve Collections</h3>
        <p>Early detection of payment issues enables proactive outreach, improving collection rates by up to 35%.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">02</div>
        <h3>Reduce Delinquency</h3>
        <p>Real-time monitoring and automated alerts help reduce delinquency rates and roll to charge-off.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">03</div>
        <h3>Optimize Operations</h3>
        <p>Automated reconciliation and anomaly detection reduce manual work by 70% while improving accuracy.</p>
      </div>

      <div class="benefit-card">
        <div class="benefit-number">04</div>
        <h3>Better Forecasting</h3>
        <p>AI-powered predictions provide accurate revenue forecasting for improved financial planning and cash flow management.</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Ready to Transform Payment Monitoring?</h2>
      <p class="cta-subtitle">See how Mentyx helps lenders track and optimize payment performance</p>
      <div class="cta-buttons">
        <a href="https://calendly.com/contact-mentyx/30min" target="_blank" class="btn btn-primary btn-lg">
          Schedule Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/#platform" class="btn btn-secondary btn-lg">
          Explore Platform
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero-section {
    padding: 160px 0 100px;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(6, 182, 212, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 32px;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 9999px;
    color: #06b6d4;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 32px;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    color: white;
    margin: 0 0 24px 0;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.375rem;
    line-height: 1.6;
    color: #94a3b8;
    margin: 0 0 48px 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 64px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-lg {
    padding: 18px 36px;
    font-size: 1.0625rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(59, 130, 246, 0.1);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
    padding: 32px 48px;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    backdrop-filter: blur(12px);
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .stat-label {
    color: #94a3b8;
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 60px;
    background: rgba(59, 130, 246, 0.2);
  }

  /* Features Section */
  .features-section {
    padding: 120px 0;
    background: #0f172a;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 16px 0;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .feature-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(15, 23, 42, 0.4) 100%);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 24px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-icon {
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #06b6d4;
    margin-bottom: 24px;
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
  }

  .feature-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 16px 0;
  }

  .feature-description {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 24px 0;
    font-size: 1rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-list li {
    color: #cbd5e1;
    padding: 10px 0;
    padding-left: 28px;
    position: relative;
    font-size: 0.9375rem;
  }

  .feature-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #06b6d4;
    font-weight: bold;
  }

  /* Benefits Section */
  .benefits-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #0a101c 0%, #0f172a 100%);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
  }

  .benefit-card {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-4px);
  }

  .benefit-number {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .benefit-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 16px 0;
  }

  .benefit-card p {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    padding: 120px 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 24px 0;
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: #94a3b8;
    margin: 0 0 48px 0;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 32px;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .section-title {
      font-size: 2rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 2rem;
    }
  }
</style>

</Layout>