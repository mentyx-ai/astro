---
// src/pages/contact.astro
import Layout from '../components/layouts/Layout.astro';
import FaqSection from '../components/FaqSection.astro';
---

<Layout 
  title="Contact Us - Schedule a Demo | Mentyx.ai"
  description="Get in touch with Mentyx.ai. Schedule a personalized demo, ask questions, or explore how we can transform your loan origination process."
  canonical="https://mentyx.ai/contact"
>
  <main style="padding-top: 128px; padding-bottom: 96px;">
    
    <!-- Hero Section -->
    <section style="margin-bottom: 64px;">
      <div style="max-width: 1280px; margin: 0 auto; padding: 0 24px;">
        <div style="max-width: 896px; margin: 0 auto; text-align: center;" data-aos="fade-up">
          <div style="display: inline-flex; padding: 10px 20px; border-radius: 9999px; background: rgba(30, 127, 229, 0.15); border: 1px solid rgba(30, 127, 229, 0.3); color: #00D4E6; font-size: 14px; font-weight: 500; margin-bottom: 24px;">
            Let's Talk
          </div>
          <h1 style="font-size: 3rem; line-height: 1.1; font-weight: 900; margin-bottom: 24px; color: white;">
            Get in <span style="background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Touch</span>
          </h1>
          <p style="font-size: 1.25rem; color: #d1d5db; line-height: 1.75;">
            Schedule a personalized demo, ask questions, or learn how Mentyx can transform your lending operation
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Methods -->
    <section style="margin-bottom: 96px;">
      <div style="max-width: 1280px; margin: 0 auto; padding: 0 24px;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 24px; margin-bottom: 64px;">
          
          <a href="mailto:info@mentyx.ai" style="background: rgba(30, 127, 229, 0.08); border: 1px solid rgba(30, 127, 229, 0.3); border-radius: 16px; padding: 32px; text-decoration: none; color: white; transition: all 0.3s; display: block;" data-aos="fade-up" data-aos-delay="100" class="contact-method">
            <div style="width: 64px; height: 64px; margin-bottom: 24px; border-radius: 12px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.2) 100%); display: flex; align-items: center; justify-content: center; border: 1px solid rgba(59, 130, 246, 0.3);">
              <svg style="width: 32px; height: 32px; color: #00D4E6;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 8px; color: white;">Email Us</h3>
            <p style="color: #9ca3af; margin-bottom: 16px;">For general inquiries and support</p>
            <p style="color: #00D4E6; font-weight: 600;">info@mentyx.ai</p>
          </a>

          <div style="background: rgba(30, 127, 229, 0.08); border: 1px solid rgba(30, 127, 229, 0.3); border-radius: 16px; padding: 32px; transition: all 0.3s;" data-aos="fade-up" data-aos-delay="200" class="contact-method">
            <div style="width: 64px; height: 64px; margin-bottom: 24px; border-radius: 12px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.2) 100%); display: flex; align-items: center; justify-content: center; border: 1px solid rgba(59, 130, 246, 0.3);">
              <svg style="width: 32px; height: 32px; color: #00D4E6;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 8px; color: white;">Dublin Office</h3>
            <p style="color: #9ca3af; margin-bottom: 16px;">European headquarters</p>
            <p style="color: #00D4E6; font-weight: 600;">Dublin, Ireland</p>
          </div>

          <div style="background: rgba(30, 127, 229, 0.08); border: 1px solid rgba(30, 127, 229, 0.3); border-radius: 16px; padding: 32px; transition: all 0.3s;" data-aos="fade-up" data-aos-delay="300" class="contact-method">
            <div style="width: 64px; height: 64px; margin-bottom: 24px; border-radius: 12px; background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(6, 182, 212, 0.2) 100%); display: flex; align-items: center; justify-content: center; border: 1px solid rgba(59, 130, 246, 0.3);">
              <svg style="width: 32px; height: 32px; color: #00D4E6;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 8px; color: white;">Vienna Office</h3>
            <p style="color: #9ca3af; margin-bottom: 16px;">Central European hub</p>
            <p style="color: #00D4E6; font-weight: 600;">Vienna, Austria</p>
          </div>

        </div>

        <div style="display: grid; grid-template-columns: 1fr; gap: 48px; max-width: 1152px; margin: 0 auto;">
          
          <!-- Contact Form -->
          <div style="background: rgba(30, 127, 229, 0.08); border: 1px solid rgba(30, 127, 229, 0.3); border-radius: 16px; padding: 40px;" data-aos="fade-up" data-aos-delay="400">
            <div id="formSection">
              <h2 style="font-size: 1.875rem; font-weight: 700; margin-bottom: 8px; color: white;">Schedule a Demo</h2>
              <p style="color: #9ca3af; margin-bottom: 32px;">Fill out the form and we'll reach out within 24 hours</p>
              
              <!-- Web3Forms Integration -->
              <form action="https://api.web3forms.com/submit" method="POST" class="contact-form" id="contactForm">
                <input type="hidden" name="access_key" value="668cabdc-9057-4e2a-8995-2a2e8ec13aaf">
                <input type="hidden" name="subject" value="New Contact Form Submission - Mentyx.ai">
                <input type="hidden" name="from_name" value="Mentyx.ai Website Contact Page">
                
                <div class="form-group" style="margin-bottom: 20px;">
                  <label for="name" style="display: block; color: #94a3b8; font-size: 14px; font-weight: 600; margin-bottom: 8px;">Full Name *</label>
                  <input 
                    type="text" 
                    id="name"
                    name="name"
                    placeholder="John Smith" 
                    required
                    style="width: 100%; padding: 16px 20px; background: rgba(30,127,229,.06); border: 1px solid rgba(30,127,229,.25); border-radius: 12px; color: #fff; font-family: Inter, sans-serif; font-size: 15px;"
                  >
                </div>
                
                <div class="form-group" style="margin-bottom: 20px;">
                  <label for="email" style="display: block; color: #94a3b8; font-size: 14px; font-weight: 600; margin-bottom: 8px;">Work Email *</label>
                  <input 
                    type="email" 
                    id="email"
                    name="email"
                    placeholder="john@company.com" 
                    required
                    style="width: 100%; padding: 16px 20px; background: rgba(30,127,229,.06); border: 1px solid rgba(30,127,229,.25); border-radius: 12px; color: #fff; font-family: Inter, sans-serif; font-size: 15px;"
                  >
                </div>
                
                <div class="form-group" style="margin-bottom: 20px;">
                  <label for="company" style="display: block; color: #94a3b8; font-size: 14px; font-weight: 600; margin-bottom: 8px;">Company Name *</label>
                  <input 
                    type="text" 
                    id="company"
                    name="company"
                    placeholder="Your Company" 
                    required
                    style="width: 100%; padding: 16px 20px; background: rgba(30,127,229,.06); border: 1px solid rgba(30,127,229,.25); border-radius: 12px; color: #fff; font-family: Inter, sans-serif; font-size: 15px;"
                  >
                </div>
                
                <div class="form-group" style="margin-bottom: 20px;">
                  <label for="phone" style="display: block; color: #94a3b8; font-size: 14px; font-weight: 600; margin-bottom: 8px;">Phone Number (Optional)</label>
                  <input 
                    type="tel" 
                    id="phone"
                    name="phone"
                    placeholder="+1 (555) 123-4567"
                    style="width: 100%; padding: 16px 20px; background: rgba(30,127,229,.06); border: 1px solid rgba(30,127,229,.25); border-radius: 12px; color: #fff; font-family: Inter, sans-serif; font-size: 15px;"
                  >
                </div>
                
                <div class="form-group" style="margin-bottom: 20px;">
                  <label for="message" style="display: block; color: #94a3b8; font-size: 14px; font-weight: 600; margin-bottom: 8px;">How can we help? (Optional)</label>
                  <textarea 
                    id="message"
                    name="message"
                    placeholder="Tell us about your current loan origination process..." 
                    rows="4"
                    style="width: 100%; padding: 16px 20px; background: rgba(30,127,229,.06); border: 1px solid rgba(30,127,229,.25); border-radius: 12px; color: #fff; font-family: Inter, sans-serif; font-size: 15px; resize: vertical;"
                  ></textarea>
                </div>
                
                <div class="form-status" id="formStatus" style="padding: 12px; border-radius: 8px; margin-bottom: 16px; font-size: 0.875rem; display: none;"></div>
                
                <button type="submit" class="btn btn-primary btn-block" style="width: 100%; padding: 16px; background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%); color: white; border: none; border-radius: 12px; font-size: 1rem; font-weight: 600; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px; transition: all 0.3s;">
                  <span class="btn-text">Send Message</span>
                  <span class="btn-loader" style="display: none;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10" opacity="0.25"/>
                      <path d="M12 2a10 10 0 0 1 10 10" opacity="0.75"/>
                    </svg>
                  </span>
                </button>

                <p style="color: #6b7280; font-size: 12px; margin-top: 16px; text-align: center;">
                  By submitting this form, you agree to our privacy policy. We'll never share your information.
                </p>
              </form>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <FaqSection />

  </main>
</Layout>

<style>
  .contact-method:hover {
    transform: translateY(-4px);
  }
  
  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: rgba(0,212,230,.5) !important;
    box-shadow: 0 0 0 3px rgba(0,212,230,.08);
  }
  
  input::placeholder, textarea::placeholder {
    color: #64748b;
  }
  
  button[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }
  
  details[open] summary svg {
    transform: rotate(180deg);
  }

  /* Form Status Messages */
  .form-status.success {
    display: block !important;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: #22c55e;
  }

  .form-status.error {
    display: block !important;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
  }

  /* Button Loader */
  .btn-loader svg {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @media (min-width: 1024px) {
    main > section:nth-of-type(2) > div > div:last-child {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contactForm');
    
    // Form submission - Web3Forms Integration
    contactForm?.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const form = this;
      const formData = new FormData(form);
      const submitBtn = form.querySelector('button[type="submit"]');
      const btnText = submitBtn.querySelector('.btn-text');
      const btnLoader = submitBtn.querySelector('.btn-loader');
      const statusDiv = document.getElementById('formStatus');
      
      // Basic validation
      const name = formData.get('name')?.toString().trim();
      const email = formData.get('email')?.toString().trim();
      const company = formData.get('company')?.toString().trim();
      
      if (!name || !email || !company) {
        statusDiv.className = 'form-status error';
        statusDiv.textContent = 'Please fill in all required fields (*)';
        statusDiv.style.display = 'block';
        return;
      }
      
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        statusDiv.className = 'form-status error';
        statusDiv.textContent = 'Please enter a valid email address';
        statusDiv.style.display = 'block';
        return;
      }
      
      submitBtn.disabled = true;
      btnText.style.display = 'none';
      btnLoader.style.display = 'inline-block';
      statusDiv.style.display = 'none';
      
      try {
        // Submit to Web3Forms
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
        });
        
        const result = await response.json();
        
        if (result.success) {
          statusDiv.className = 'form-status success';
          statusDiv.innerHTML = '<strong>âœ“ Message sent successfully!</strong><br>We\'ll get back to you within 24 hours.';
          statusDiv.style.display = 'block';
          
          form.reset();
          
          // Scroll to show success message
          statusDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          throw new Error(result.message || 'Submission failed');
        }
        
      } catch (error) {
        statusDiv.className = 'form-status error';
        statusDiv.textContent = 'Something went wrong. Please try again or email us directly at info@mentyx.ai';
        statusDiv.style.display = 'block';
      } finally {
        submitBtn.disabled = false;
        btnText.style.display = 'inline';
        btnLoader.style.display = 'none';
      }
    });
  });
</script>
