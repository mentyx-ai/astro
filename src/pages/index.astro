---
import Layout from '../components/layouts/Layout.astro';

// UI Components
import Button from '../components/ui/Button.astro';
import ContactModal from '../components/ui/ContactModal.astro';
import ExitPopup from '../components/ui/ExitPopup.astro';

// Section Components  
import Hero from '../components/sections/Hero.astro';
import Dashboard from '../components/sections/Dashboard.astro';
import ClientLogos from '../components/sections/ClientLogos.astro';
import ProblemSection from '../components/sections/ProblemSection.astro';
import HowItWorks from '../components/sections/HowItWorks.astro';
import FeaturesSection from '../components/sections/FeaturesSection.astro';
import SecuritySection from '../components/sections/SecuritySection.astro';
import TestimonialsSection from '../components/sections/TestimonialsSection.astro';
import InsightsSection from '../components/sections/InsightsSection.astro';
import LendersSection from '../components/sections/LendersSection.astro';
import FaqSection from '../components/sections/FaqSection.astro';
import CtaSection from '../components/sections/CtaSection.astro';
---

<Layout 
  title="Mentyx.ai | AI Loan Origination for Private Real Estate Lenders"
  description="Mentyx is an AI-powered loan origination platform built for private real estate lenders. Automate asset-based lending workflows across Fix & Flip, Bridge and DSCR loans with AI underwriting, document intelligence, and affiliate-wide consistency."
  canonical="https://mentyx.ai"
  ogImage="/og-default.jpg"
>

  <!-- Main Content Sections -->
  <Hero />
  <Dashboard />
  <ClientLogos />
  <ProblemSection />
  <HowItWorks />
  <FeaturesSection />
  <SecuritySection />
  <TestimonialsSection />
  <InsightsSection />
  <LendersSection />
  <FaqSection />
  <CtaSection />

  <!-- Modals / Popups -->
  <ExitPopup />
  <ContactModal />

  <!-- ======================================================= -->
  <!-- SEO STRUCTURED DATA â€“ INDEX PAGE                       -->
  <!-- ======================================================= -->

  <!-- 1) SoftwareApplication Schema -->
  <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Mentyx.ai",
  "applicationCategory": "LoanOriginationSoftware",
  "operatingSystem": "Any",
  "url": "https://mentyx.ai",
  "description": "AI-powered loan origination and underwriting platform for private real estate lenders specializing in Fix & Flip, Bridge and DSCR loans.",
  "publisher": {
    "@type": "Organization",
    "name": "Mentyx.ai",
    "url": "https://mentyx.ai"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  }
}
</script>

  <!-- 2) BreadcrumbList Schema -->
  <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://mentyx.ai"
    }
  ]
}
</script>

  <!-- 3) FAQ Schema (from your FAQ Section) -->
  <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is Mentyx.ai?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mentyx.ai is an AI-powered loan origination and underwriting platform built specifically for private real estate lenders who fund Fix & Flip, Bridge and DSCR loans."
      }
    },
    {
      "@type": "Question",
      "name": "Who is Mentyx built for?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mentyx is designed for private lenders, hard money lenders, direct lenders, and multi-affiliate real estate lending companies."
      }
    },
    {
      "@type": "Question",
      "name": "What documents can the AI read?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The AI extracts data from appraisals, bank statements, credit reports, purchase agreements, rehab budgets, tax documents and more."
      }
    },
    {
      "@type": "Question",
      "name": "How fast is the underwriting?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mentyx reduces underwriting and document review time from several days to a few hours through automated document intelligence and AI scoring."
      }
    }
  ]
}
</script>


  <!-- ======================================================= -->
  <!-- PAGE SCRIPTS                                            -->
  <!-- ======================================================= -->

  <script>
    window.addEventListener('load', function() {
      if ('performance' in window) {
        const navTiming = performance.getEntriesByType('navigation')[0];
        console.log('ðŸš€ Page loaded in:', navTiming.loadEventEnd - navTiming.navigationStart + 'ms');
      }
    });

    window.openContactModal = function() {
      const modal = document.getElementById('contactModal');
      if (modal) {
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';
      }
    };

    window.openCalendly = function() {
      window.open('https://calendly.com/contact-mentyx/30min', '_blank');
    };

    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('heroScheduleCall')?.addEventListener('click', window.openCalendly);
      document.getElementById('heroEmailUs')?.addEventListener('click', window.openContactModal);
      document.getElementById('ctaScheduleCall')?.addEventListener('click', window.openCalendly);
      document.getElementById('ctaContactSales')?.addEventListener('click', window.openContactModal);
      document.getElementById('workflowCTA')?.addEventListener('click', window.openContactModal);
    });
  </script>


