    }

    body {
      background-color: #0f172a;
      color: white;
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      overflow-x: hidden;
    }

    /* Andere Styles beibehalten */
  </style>

</Layout>
