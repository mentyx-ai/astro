<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Modal Elements
    const modal = document.getElementById('downloadModal');
    const modalTitle = document.getElementById('modalTitle');
    const downloadFormSection = document.getElementById('downloadFormSection');
    const downloadSuccessSection = document.getElementById('downloadSuccessSection');
    const downloadForm = document.getElementById('downloadForm');
    const resourceNameInput = document.getElementById('resourceName');
    const confirmDownloadEmail = document.getElementById('confirmDownloadEmail');
    const confirmResourceName = document.getElementById('confirmResourceName');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const closeSuccessBtn = document.getElementById('closeSuccessBtn');
    const newsletterForm = document.getElementById('newsletterForm');

    // Category Filtering
    const categoryButtons = document.querySelectorAll('.category-btn');
    const resourceCards = document.querySelectorAll('.resource-card, .tool-card');

    let currentResource = '';

    // Category Filtering
    categoryButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active button
        categoryButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const category = btn.dataset.category;
        
        // Filter resources
        resourceCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.style.display = 'block';
            setTimeout(() => {
              card.style.opacity = '1';
              card.style.transform = 'translateY(0)';
            }, 50);
          } else {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            setTimeout(() => {
              card.style.display = 'none';
            }, 300);
          }
        });
      });
    });

    // Open modal when download button is clicked
    document.querySelectorAll('.download-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        currentResource = btn.dataset.resource;
        if (modalTitle) modalTitle.textContent = 'Download: ' + currentResource;
        if (resourceNameInput) resourceNameInput.value = currentResource;
        if (modal) modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });

    // Close modal
    function closeModal() {
      if (modal) modal.classList.remove('active');
      document.body.style.overflow = '';
      if (downloadFormSection) downloadFormSection.style.display = 'block';
      if (downloadSuccessSection) downloadSuccessSection.classList.remove('active');
      downloadForm?.reset();
    }

    closeModalBtn?.addEventListener('click', closeModal);
    closeSuccessBtn?.addEventListener('click', closeModal);

    // Close modal on backdrop click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Handle download form submission - Web3Forms Integration
    downloadForm?.addEventListener('submit', async (event) => {
      event.preventDefault();
      
      const form = event.target;
      const formData = new FormData(form);
      const submitBtn = form.querySelector('.download-submit-btn');
      const btnText = submitBtn.querySelector('.btn-text');
      const btnLoader = submitBtn.querySelector('.btn-loader');
      const statusDiv = document.getElementById('downloadFormStatus');
      
      // Basic validation
      const name = formData.get('name')?.toString().trim();
      const email = formData.get('email')?.toString().trim();
      const company = formData.get('company')?.toString().trim();
      
      if (!name || !email || !company) {
        statusDiv.className = 'form-status error';
        statusDiv.textContent = 'Please fill in all required fields (*)';
        statusDiv.style.display = 'block';
        return;
      }
      
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        statusDiv.className = 'form-status error';
        statusDiv.textContent = 'Please enter a valid email address';
        statusDiv.style.display = 'block';
        return;
      }
      
      submitBtn.disabled = true;
      btnText.style.display = 'none';
      btnLoader.style.display = 'inline-block';
      statusDiv.style.display = 'none';
      
      try {
        // Submit to Web3Forms
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Show success message
          if (downloadFormSection) downloadFormSection.style.display = 'none';
          if (downloadSuccessSection) downloadSuccessSection.classList.add('active');
          if (confirmDownloadEmail) confirmDownloadEmail.textContent = email;
          if (confirmResourceName) confirmResourceName.textContent = currentResource;
          
          downloadForm.reset();
          
          // Auto-close after 5 seconds
          setTimeout(() => {
            closeModal();
          }, 5000);
        } else {
          throw new Error(result.message || 'Submission failed');
        }
        
      } catch (error) {
        statusDiv.className = 'form-status error';
        statusDiv.textContent = 'Something went wrong. Please try again or email us directly at info@mentyx.ai';
        statusDiv.style.display = 'block';
      } finally {
        submitBtn.disabled = false;
        btnText.style.display = 'inline';
        btnLoader.style.display = 'none';
      }
    });

    // Handle newsletter form submission
    newsletterForm?.addEventListener('submit', async (event) => {
      event.preventDefault();
      
      const emailInput = document.getElementById('newsletter_email');
      const email = emailInput?.value;
      
      if (!email) return;
      
      // Here you would integrate with your newsletter service (Mailchimp, ConvertKit, etc.)
      console.log('Newsletter signup:', { email });
      
      // Show success message
      alert('Thanks for subscribing! Check your email for confirmation.');
      newsletterForm.reset();
    });
  });
</script>