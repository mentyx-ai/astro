---
import Layout from '../components/layouts/Layout.astro';

const solutions = {
  origination: [
    {
      title: 'Borrower Portal',
      slug: 'borrower-portal',
      description: 'Online & mobile applications',
      icon: 'upload',
      features: ['24/7 online applications', 'Mobile-friendly interface', 'Document upload & tracking']
    },
    {
      title: 'Document Intelligence',
      slug: 'document-intelligence',
      description: 'AI extraction & validation',
      icon: 'document',
