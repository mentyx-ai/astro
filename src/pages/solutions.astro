  ],
  servicing: [
    {
      title: 'Loan Management',
      slug: 'loan-management',
      description: 'Registry & payment tracking',
      icon: 'chart',
      features: ['Loan registry', 'Payment schedules', 'Balance tracking']
    },
    {
      title: 'Real Estate Valuator',
      slug: 'real-estate-valuator',
      description: 'Mobile property appraisals',
      icon: 'home',
      features: ['Photo-based appraisals', 'Comp sales lookup', 'ARV estimation']
    },
    {
      title: 'Portfolio Reporting',
      slug: 'portfolio-reporting',
      description: 'Performance analytics',
      icon: 'graph',
      features: ['Portfolio dashboards', 'Risk metrics', 'Performance trends']
