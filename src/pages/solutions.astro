    {
      title: 'Application Management',
      slug: 'application-management',
      description: 'Pipeline & status tracking',
      icon: 'pipeline',
      features: ['Visual pipeline stages', 'Status notifications', 'Team collaboration']
    }
  ],
  ai: [
    {
      title: 'AI Underwriting',
