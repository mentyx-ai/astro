  ],
  oversight: [
    {
      title: 'Multi-Affiliate Dashboard',
      slug: 'multi-affiliate-dashboard',
      description: 'Cross-entity visibility',
      icon: 'grid',
      features: ['Consolidated view', 'Per-affiliate metrics', 'HQ oversight']
