  <script>
    // INTERACTIVE WORKFLOW STEPS
    let currentStep = 0;
    const stepNavButtons = document.querySelectorAll('.step-nav-btn');
    const workflowSteps = document.querySelectorAll('.workflow-step');
    const workflowArrows = document.querySelectorAll('.workflow-arrow');
    
    function showStep(stepIndex) {
      // Hide all steps and arrows
      workflowSteps.forEach((step) => {
        step.classList.remove('active');
        step.style.display = 'none';
      });
      workflowArrows.forEach((arrow) => {
        arrow.style.display = 'none';
      });
      
      // Show current step
      const activeStep = workflowSteps[stepIndex];
      if (!activeStep) return;
      activeStep.classList.add('active');
      activeStep.style.display = 'grid';
      
      // Show arrow after current step if not last
      if (stepIndex < workflowArrows.length) {
        workflowArrows[stepIndex].style.display = 'flex';
      }
      
      // Update navigation buttons
      stepNavButtons.forEach((btn, index) => {
        btn.classList.toggle('active', index === stepIndex);
      });
      
      // Animate metrics if step 3 (AI Analysis)
      if (stepIndex === 2) {
        animateMetrics();
      }
    }
    
    // Navigation button click handlers
    stepNavButtons.forEach((btn, index) => {
      btn.addEventListener('click', () => {
        currentStep = index;
        showStep(currentStep);
      });
    });
    
    // Auto-rotate steps every 8 seconds (only if user didn't interact recently)
    let autoRotate = true;
    let autoRotateTimeout;
    
    function resetAutoRotateTimer() {
      autoRotate = false;
      clearTimeout(autoRotateTimeout);
      autoRotateTimeout = setTimeout(() => {
        autoRotate = true;
      }, 15000);
    }
    
    stepNavButtons.forEach((btn) => {
      btn.addEventListener('click', resetAutoRotateTimer);
    });
    
    setInterval(() => {
      if (!autoRotate) return;
      currentStep = (currentStep + 1) % workflowSteps.length;
      showStep(currentStep);
    }, 8000);
    
    // Initialize - show first step
    showStep(0);
    
    // ANIMATED METRICS
    function animateMetrics() {
      const metricValues = document.querySelectorAll('.metric-value');
      metricValues.forEach((metric) => {
        const targetValue = parseInt(metric.getAttribute('data-value'));
        if (!targetValue || metric.dataset.animated === 'true') return;
        metric.dataset.animated = 'true';
        animateValue(metric, 0, targetValue, 1500);
      });
    }
    
    function animateValue(element, start, end, duration) {
      let startTimestamp = null;
      const step = (timestamp) => {
        if (!startTimestamp) startTimestamp = timestamp;
        const progress = Math.min((timestamp - startTimestamp) / duration, 1);
        const value = Math.floor(progress * (end - start) + start);
        element.textContent = value;
        if (progress < 1) {
          window.requestAnimationFrame(step);
        }
      };
      window.requestAnimationFrame(step);
    }
    
    // INTERSECTION OBSERVER FOR SCROLL ANIMATIONS
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);
    
    // Observe elements for animation
    document.querySelectorAll('.why-card, .arch-feature, .integration-card').forEach((el) => {
      observer.observe(el);
    });
    
    // Smooth scroll for internal anchor links
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener('click', function (e) {
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          e.preventDefault();
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
