  }

  /* CTA Section */
  .cta-section {
    padding: 120px 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin: 0 0 24px 0;
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: #94a3b8;
    margin: 0 0 48px 0;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-lg {
    padding: 18px 36px;
    font-size: 1.0625rem;
  }

  .btn-small {
    padding: 14px 28px;
    font-size: 0.9375rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(59, 130, 246, 0.1);
    color: #06b6d4;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-secondary:hover {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.5);
  }

  /* AI Text Animation */
  .ai-text {
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: violetPulse 2s ease-in-out infinite;
    font-weight: inherit;
  }

  @keyframes violetPulse {
    0%, 100% {
      opacity: 1;
      filter: brightness(1);
    }
    50% {
      opacity: 0.85;
      filter: brightness(1.3);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .cta-title {
      font-size: 2rem;
    }
  }
</style>